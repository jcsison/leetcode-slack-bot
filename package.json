{
  "name": "leetcode-slack-bot",
  "version": "1.0.0",
  "description": "A bot for Slack that posts LeetCode questions.",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "node --loader ts-node/esm --experimental-specifier-resolution=node --no-warnings src/index.ts | pino-pretty",
    "tsc:watch": "tsc -w"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/bolt": "^3.11.0",
    "@types/node-schedule": "^1.3.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "graphql-request": "^4.2.0",
    "node-schedule": "^2.1.0",
    "pino": "^7.10.0",
    "pino-pretty": "^7.6.1",
    "ts-node": "^10.7.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint src/**/*.{ts,tsx}"
    ]
  }
}
